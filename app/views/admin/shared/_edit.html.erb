<% if @user_is_admin %>
    <h4>Merge Articles</h4>
    <% merge_action = "/admin/content/merge/#{@article.id}" %>
    <%= form_tag(merge_action,  multipart: true) do %>
        <%= label_tag 'merge_with', 'Article ID' %>
        <%= text_field_tag 'merge_with' %>
        <%= submit_tag 'Merge' %>
    <% end %>
<% end %>
